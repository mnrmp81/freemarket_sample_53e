= render "shared/top_page/header"
- breadcrumb :confirmation
= breadcrumbs separator: " &rsaquo; "


.main__container.clearfix
  = render partial: 'shared/mypage/side_menu'

  .main__content
    %section.chapter__container
      %h2.chapter__head 支払い方法
      .payment__main
        .payment__list
          .payment__list__content
            %h3.sub__head クレジットカード一覧
        .add__card
          .payment__list__content
            = link_to edit_credit_card_path(current_user), class: "red__btn" do
              %i
              = icon('fas', 'credit-card', class: "card__icon")
              クレジットカードを追加する
        .not__regist
          %span 支払い方法について

= render "shared/top_page/sell-fix-logo"
= render "shared/top_page/app-banner"
= render "shared/top_page/footer"