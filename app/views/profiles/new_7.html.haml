.backscreen
  .top_logo
    %a{href: "/", class: "top_logo__link"}
      =image_tag "profiles/mercari_logo.jpg", class: "top_logo__link__image"
  .edit_registration
    .edit_registration__first
      %a{href: "/", class: "edit_registration__first__signup"}
        アカウントをお持ちでない方はこちら
        %button{type: "submit", class: "edit_registration__first__signupbutton"}
          新規会員登録
    .edit_registration__second
      %a{href: "/", class: "edit_registration__second__f"}
        %button{type: "submit", class: "edit_registration__second__f_loginbutton"}
          =image_tag "profiles/facebook_logo.jpg", class: "edit_registration__second__f_loginbutton__logo"
          %a{class: "edit_registration__second__f_loginbutton__title"}
            Facebookでログイン
      %br
      %a{href: "/", class: "edit_registration__second__g"}
        %button{type: "submit", class: "edit_registration__second__g_loginbutton"}
          =image_tag "profiles/Google_logo.jpg", class: "edit_registration__second__g_loginbutton__logo"
          %a{class: "edit_registration__second__f_loginbutton__title"}
            Googleでログイン
    
      = form_tag( root_path, method: :get, class: 'login-form') do
        = text_field :email, params[:email], { placeholder: "メールアドレス", class: "edit_registration__second__email" }
        %br
        = text_field :password, params[:password], { placeholder: "パスワード", class: "edit_registration__second__password" }
        %br
        .form-group__checkbox.form-group__checkbox--login
          .form-group__checkbox__robot
            %input{name: "robot", type: "checkbox", value: "1"}>/
            .form-group__checkbox__notrobot 
              私はロボットでは
              %br ありません
            =image_tag  "profiles/18.18.00.png", class: "photo"
            %br
          .form-group__checkbox__link
            %a{href: ""} プライバシー
            %p ・
            %a{href: ""} 利用規約
        =submit_tag "ログイン", {class: "input_user_registration__second__subbutton"}
        %br
        %a{href: "/", class: "edit_registration__second__fogetpass"}
          パスワードをお忘れの方
  
