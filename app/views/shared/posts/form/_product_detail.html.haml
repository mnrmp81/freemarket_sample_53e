.category__post__content
  %h3.post__container__sub__head 商品の詳細
  .post__form__box
    .form__content#category-contents
      =f.label :first_category_id, "カテゴリー"
      %span.require__form 必須
      .select__box
        = f.collection_select :first_category_id, FirstCategory.all, :id, :name, {prompt: "---"}, {class: "select__box__format"}
        .drop-down-icon
          = icon('fas', 'chevron-down')
      = render partial: 'shared/posts/form/error', locals: { post: post, attr: :first_category_id}
      - if post.second_category_id.present?
        .select__box
          = f.collection_select :second_category_id, SecondCategory.all, :id, :name, {prompt: "---"}, {class: "select__box__format"}
          .drop-down-icon
            = icon('fas', 'chevron-down')
        = render partial: 'shared/posts/form/error', locals: { post: post, attr: :second_category_id}
      -# ----------------カテゴリー実装後にコメントアウトを外す-------------------
