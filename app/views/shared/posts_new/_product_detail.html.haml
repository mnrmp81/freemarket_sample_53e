.category__post__content
  %h3.post__container__sub__head 商品の詳細
  .post__form__box
    .form__content
      =f.label :first_category_id, "カテゴリー"
      %span.require__form 必須
      %div
        .select__box
          %select.select__box__format
            %option ---
            =@first_categories.each do |fir|
              %option
                =fir.name
          .drop-down-icon
            = icon('fas', 'chevron-down')
        .select__box
          %select.select__box__format
            %option ---
            =@second_categories.each do |sec|
              %option
                =sec.name
          .drop-down-icon
            = icon('fas', 'chevron-down')
        .select__box
          %select.select__box__format
            %option ---
          .drop-down-icon
            = icon('fas', 'chevron-down')
    .form__content__deafult
      =f.label :product_size, "サイズ"
      %span.require__form 必須
      %div
        .select__box
          =f.select :product_size, Post.product_sizes_i18n.invert, {:selected=>Post.product_conditions[@post.product_condition],prompt: "---"}, class: "select__box__format"
          .drop-down-icon
            = icon('fas', 'chevron-down')
    .form__content__deafult
      =f.label :brand_id, "ブランド"
      %span.any__form 任意
      %div
        .select__box
          %input.select__box__format{placeholder: '例)シャネル'}
    .form__content__deafult
      =f.label :product_condition, "商品の状態"
      %span.require__form 必須
      %div
        .select__box
          = f.select :product_condition, Post.product_conditions_i18n.invert, {:selected=>Post.product_conditions[@post.product_condition], prompt: "---"}, class: "select__box__format"
          .drop-down-icon
            = icon('fas', 'chevron-down')